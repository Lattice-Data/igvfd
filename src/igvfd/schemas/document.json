{
    "title": "Document",
    "description": "A document with additional information regarding another object submitted to the Lattice Data Portal. For example, a plasmid map document associated with a transduced cell line sample.",
    "$id": "/profiles/document.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "document_type",
        "description",
        "attachment",
        "lab"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attachment"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "document_type": {
            "title": "Document Type",
            "description": "The category that best describes the document.",
            "type": "string",
            "enum": [
                "computational protocol",
                "experimental protocol"
            ],
            "submissionExample": {
                "appscript": "experimental protocol",
                "igvf_utils": "experimental protocol"
            }
        },
        "urls": {
            "rdfs:subPropertyOf": "rdfs:seeAlso",
            "title": "URL",
            "description": "External resources with additional information to the document.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "URL",
                "description": "An external resource with additional information to the document.",
                "type": "string",
                "format": "uri"
            },
            "submissionExample": {
                "appscript": "[\"https://www.addgene.org/search/catalog/plasmids/?q=cas9\"]",
                "igvf_utils": "https://www.addgene.org/search/catalog/plasmids/?q=cas9"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description",
        "document_type",
        "lab.title",
        "submitted_by.title"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/document.md"
}
