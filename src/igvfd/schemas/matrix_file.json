{
    "title": "Matrix File",
    "$id": "/profiles/matrix_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A file containing matrix data in HDF5 format.",
    "type": "object",
    "required": [
        "lab",
        "md5sum",
        "file_format"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        },
        {
            "$ref": "file.json#/properties"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "file_format": {
            "title": "File Format",
            "description": "The file format or extension of the file.",
            "type": "string",
            "enum": [
                "h5",
                "h5ad"
            ],
            "submissionExample": {
                "appscript": "h5ad",
                "igvf_utils": "h5ad"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/matrix_file.md"
}
