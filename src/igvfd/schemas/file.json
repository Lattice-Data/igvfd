{
    "title": "File",
    "$id": "/profiles/file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Abstract schema for submission of a file.",
    "type": "object",
    "required": [
        "lab",
        "md5sum",
        "file_format"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        }
    ],
    "dependentSchemas": {
        "no_file_available": {
            "if": {
                "properties": {
                    "no_file_available": {
                        "const": true
                    }
                }
            },
            "then": {
                "not": {
                    "required": [
                        "s3_uri"
                    ]
                }
            },
            "else": {
                "required": [
                    "s3_uri"
                ]
            }
        }
    },
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "file_format": {
            "title": "File Format",
            "description": "The file format or extension of the file.",
            "comment": "This property is overwritten by the subclasses to define specific enum values.",
            "type": "string",
            "submissionExample": {
                "appscript": "bam",
                "igvf_utils": "bam"
            }
        },
        "file_size": {
            "title": "File Size",
            "description": "File size specified in bytes.",
            "comment": "Do not submit. This value is calculated by the checkfiles script upon submission.",
            "type": "integer",
            "minimum": 0
        },
        "md5sum": {
            "title": "MD5sum",
            "description": "The md5sum of the file being transferred.",
            "type": "string",
            "format": "hex",
            "maxLength": 32,
            "pattern": "[a-f\\d]{32}|[A-F\\d]{32}",
            "submissionExample": {
                "appscript": "74b87337454200d4d33f80c4663dc5e5",
                "igvf_utils": "74b87337454200d4d33f80c4663dc5e5"
            }
        },
        "s3_uri": {
            "title": "S3 URI",
            "description": "The S3 URI where the file is stored.",
            "type": "string",
            "pattern": "^s3://.+",
            "submissionExample": {
                "appscript": "s3://igvfd-bucket/path/to/file.fastq.gz",
                "igvf_utils": "s3://igvfd-bucket/path/to/file.fastq.gz"
            }
        },
        "no_file_available": {
            "title": "No File Available",
            "description": "Set to true when no file is available for this record.",
            "type": "boolean",
            "default": false
        },
        "derived_from": {
            "title": "Derived From",
            "description": "The files participating as inputs into software to produce this output file.",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "File Derived From",
                "comment": "See file.json for a list of available identifiers.",
                "type": "string",
                "linkTo": "File"
            },
            "submissionExample": {
                "appscript": "[\"IGVFFI1234ABCD\", \"john-doe:file01\"]",
                "igvf_utils": "IGVFFI1234ABCD, john-doe:file01"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/file.md"
}
