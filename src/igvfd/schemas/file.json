{
    "title": "File",
    "description": "Abstract schema for files.",
    "$id": "/profiles/file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": [
        "lab",
        "md5sum",
        "dataset"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "md5sum": {
            "title": "MD5sum",
            "description": "MD5 checksum of the file content.",
            "type": "string",
            "format": "md5sum"
        },
        "dataset": {
            "title": "Dataset",
            "description": "Dataset associated with this file.",
            "comment": "See dataset.json for available identifiers.",
            "type": "string",
            "linkTo": "Dataset"
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description",
        "md5sum"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/file.md"
}
