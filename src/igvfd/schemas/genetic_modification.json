{
    "title": "Genetic Modification",
    "$id": "/profiles/genetic_modification.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Genetic modifications applied to biological samples, including CRISPR-based and other genetic engineering techniques.",
    "type": "object",
    "required": [
        "modality"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/shared_status"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "modality": {
            "title": "Modality",
            "description": "The purpose or intended effect of the genetic modification.",
            "type": "string",
            "enum": [
                "activation",
                "base editing",
                "cutting",
                "interference",
                "knockout",
                "localizing",
                "prime editing"
            ]
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description"
    ],
    "exact_searchable_fields": [
        "@type",
        "modality"
    ],
    "changelog": "/profiles/changelogs/genetic_modification.md"
}
