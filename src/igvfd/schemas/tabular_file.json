{
    "title": "Tabular File",
    "$id": "/profiles/tabular_file.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A file containing tabular data in CSV or TSV format.",
    "type": "object",
    "required": [
        "lab",
        "md5sum",
        "file_format"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        },
        {
            "$ref": "file.json#/properties"
        }
    ],
    "allOf": [
        {
            "if": {
                "properties": {
                    "no_file_available": {
                        "const": true
                    }
                },
                "required": [
                    "no_file_available"
                ]
            },
            "then": {
                "not": {
                    "required": [
                        "s3_uri"
                    ]
                }
            },
            "else": {
                "required": [
                    "s3_uri"
                ]
            }
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "file_format": {
            "title": "File Format",
            "description": "The file format or extension of the file.",
            "type": "string",
            "enum": [
                "csv",
                "tsv"
            ],
            "submissionExample": {
                "appscript": "csv",
                "igvf_utils": "csv"
            }
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/tabular_file.md"
}
