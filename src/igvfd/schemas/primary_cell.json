{
    "title": "Primary Cell",
    "$id": "/profiles/primary_cell.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "A concrete primary cell sample schema inheriting from abstract Biosample class.",
    "type": "object",
    "required": [
        "lab",
        "donors",
        "sample_terms"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/basic_item"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/shared_status"
        },
        {
            "$ref": "biosample.json#/properties"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "passage_number": {
            "title": "Passage Number",
            "description": "Number of passages including the passages from the source.",
            "type": "integer",
            "minimum": 0
        },
        "date_obtained": {
            "title": "Date Obtained",
            "description": "The date the primary cell sample was collected.",
            "type": "string",
            "format": "date"
        }
    },
    "fuzzy_searchable_fields": [
        "aliases",
        "description",
        "sample_terms.term_name"
    ],
    "exact_searchable_fields": [
        "@type"
    ],
    "changelog": "/profiles/changelogs/primary_cell.md"
}
